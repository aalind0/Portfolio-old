// **********
// POSITIONING
// **********


/* Centers an element horizontally
–––––––––––––––––––––––––––––––––––––––––––––––––– */

centerX($float = none)
  float: $float
  position: relative
  left: 50%
  transform: translateX(-50%)


/* Centers an element vertically
–––––––––––––––––––––––––––––––––––––––––––––––––– */

centerY($pos = relative)
  position: $pos
  top: 50%
  transform: translateY(-50%)


/* Centers an element both horizontally & vertically
–––––––––––––––––––––––––––––––––––––––––––––––––– */

centerXY($pos = absolute)
  position: $pos
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
