// **********
// BUTTONS
// **********


/* Button
–––––––––––––––––––––––––––––––––––––––––––––––––– */

btn($background = $primary-color, $color = $primary-text, $box-shadow = false)
  background: $background
  color: $color
  &:hover,
  &:focus
    if dark($background)
      background: tint($background, 10%)
    else
      background: shade($background, 10%)

  if $box-shadow
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16),
      0 2px 10px 0 rgba(0, 0, 0, 0.12)
    &:hover,
    &:focus
      box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18),
        0 4px 15px 0 rgba(0, 0, 0, 0.15)


/* Hollow button
–––––––––––––––––––––––––––––––––––––––––––––––––– */

btn-hollow($color = $primary-color, $background = transparent)
  color: $color
  background: $background
  border: 1.5px solid $color
  &:hover,
  &:focus
    background: $color
    color: #fff


/* Sliding Background button
–––––––––––––––––––––––––––––––––––––––––––––––––– */

btn-sliding-bg($color = $primary-color, $background = transparent)
  position: relative
  z-index: 2
  color: $color
  background: $background
  border: 1.5px solid $color
  &:after
    content: ''
    z-index: -1
    display: block
    background: $color
    position: absolute
    width: 100%
    height: 0%
    left: 0
    top: 0
    transition: all 0.1s linear
  &:hover,
  &:focus
    color: #fff
  &:hover:after,
  &:focus:after
    height: 100%
